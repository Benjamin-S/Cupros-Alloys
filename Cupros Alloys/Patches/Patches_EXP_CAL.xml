<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<!-- These are a bit redundant, but CAL and EXP have duplicate resources, because it's easier -->
	<!-- These will either overwrite the CAL version with the same info, or overwrite the EXP version -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>/Resources/ThingDef[defName="EXP_Copper"]/thingCategories</xpath>
		<value>
			<thingCategories>
				<li>CAL_Metals</li>
			</thingCategories>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>/Resources/ThingDef[defName="EXP_Lead"]/thingCategories</xpath>
		<value>
			<thingCategories>
				<li>CAL_Metals</li>
			</thingCategories>
		</value>
	</Operation>

</Patch>