<RecipeDefs>

	<!--============================== Tier 1 Alloys ==============================-->

	<RecipeDef>
		<defName>CAL_AlloyBlackBronze</defName>
		<label>smelt black bronze</label>
		<description>Use intense heat to melt and mix metals, creating black bronze. Makes 10 ingots.</description>
		<jobString>Smelting black bronze.</jobString>
		<workAmount>1400</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CP_Copper</li>
					</thingDefs>
				</filter>
				<count>6</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Silver</li>
					</thingDefs>
				</filter>
				<count>0.5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Gold</li>
					</thingDefs>
				</filter>
				<count>0.5</count>
			</li>
		</ingredients>
		<products>
			<CAL_BlackBronze>10</CAL_BlackBronze>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>CP_Copper</li>
				<li>Silver</li>
				<li>Gold</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
		<researchPrerequisite>
			<li>CAL_Tier1Alloy</li>
		</researchPrerequisite>
	</RecipeDef>

