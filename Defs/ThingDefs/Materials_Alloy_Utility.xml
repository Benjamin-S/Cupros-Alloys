	<!--============================== Utility Alloys ==============================-->


	<ThingDef ParentName="IngotBase">
		<defName>CAL_Plumchalcum</defName>
		<label>plumchalcum</label>
		<description>An alloy of lead and copper used in ancient times for plateware and utensils. Can be used for building structures, tools, and weapons.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Ingot_Dull</texPath>
			<color>(97,92,86)</color>
		</graphicData>
		<statBases>
			<MarketValue>1.9</MarketValue>
			<Mass>1</Mass>
			<SharpDamageMultiplier>0.7</SharpDamageMultiplier>
			<BluntDamageMultiplier>1.2</BluntDamageMultiplier>
		</statBases>
		<techLevel>Medieval</techLevel>
		<stuffProps>
			<color>(97,92,86)</color>
			<statFactors>
				<MaxHitPoints>0.85</MaxHitPoints>
				<Beauty>1</Beauty>
				<Cleanliness>0.95</Cleanliness>
				<Flammability>0.2</Flammability>
				<MeleeWeapon_CooldownMultiplier>1.1</MeleeWeapon_CooldownMultiplier>
				<WorkToMake>0.8</WorkToMake>
				<WorkToBuild>0.8</WorkToBuild>
				<ArmorRating_Blunt>1.1</ArmorRating_Blunt>
				<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
				<ArmorRating_Electric>0.9</ArmorRating_Electric>
				<!-- Lead is poisonous, so it affects immune speed when made into a bed -->
				<ImmunityGainSpeedFactor>0.95</ImmunityGainSpeedFactor>
			</statFactors>
		</stuffProps>
	</ThingDef>

